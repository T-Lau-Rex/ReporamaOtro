{{#if comicsCompletos}}
{{#each comicsCompletos}}
<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h2 class="text-primary text-uppercase">{{titulo}}</h2>
        <h3 class="mb-2">Vol. {{volumen}}</h3>
        <h4 class="mb-2">Categoría: {{nombre_categoria}}</h4>
        <p class="card-text">Editorial: {{nombre_editorial}}</p>
        {{#ifEquals estado 'Disponible'}}
        <p class="card-text">Disponibilidad en la editorial: <span style="font-weight:bold; color: green;">{{estado}}</span></p>
        {{else}}
        {{#ifEquals estado 'Agotado'}}
        <p class="card-text">Disponibilidad en la editorial: <span style="font-weight:bold; color: rgb(255, 136, 0);">{{estado}}</span></p>
        {{else}}
        <p class="card-text">Disponibilidad en la editorial: <span style="font-weight:bold; color: red;">{{estado}}</span></p>
        {{/ifEquals}}
        {{/ifEquals}}
        {{!-- <a class="btn btn-danger" href="/comics/delete/{{id}}">Eliminar</a>
        <a class="btn btn-secondary" href="/comics/edit/{{id}}">Ver uno</a> --}}
        <a class="btn btn-primary" href="/comics/edit/{{id}}">Editar</a>
        <a class="btn btn-danger" href="/comics/delete/{{id}}">Eliminar</a>
        <a class="btn btn-success" href="/comics/mostrar/{{id}}">Ver</a>
    </div>
</div>
{{/each}}
{{else}}
<p>No hay cómics disponibles.</p>
{{/if}}
